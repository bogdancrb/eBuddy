{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger col-sm-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="form-horizontal" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="em" id="username" name="_username" value="{{ last_username }}"
               required="required"/>
    </div>
    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required"/>
    </div>


    <div class="input-group">
        <div class="checkbox">
            <label>
                <input id="remember_me" name="_remember_me" value="on"
                       type="checkbox"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12 controls">
            <input class="form-control" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12 control">
            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                Don't have an account!
                <a href="{{ path('fos_user_registration_register') }}">
                    Sign Up Here
                </a>
            </div>
        </div>
    </div>
</form>